<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.slzr.system.dao.StatisticsDao">	
	<select id="GetTotalStatistics" resultType="com.slzr.system.domain.StatisticsDO">
		SELECT 'debit' as datatype,COUNT(*) AS DebitNum, SUM(TxnAmount)AS DebitAmount FROM[dbo].[BAR_DebitTransaction] union SELECT 'topup' as datatype, COUNT(*) AS DebitNum, SUM(TxnAmount) AS DebitAmount FROM[dbo].[BAR_TopupTransaction] where payresult = 1 union SELECT 'refund' as datatype, COUNT(*) AS DebitNum, SUM(RefundAmount) AS DebitAmount FROM[dbo].[BAR_WX_Refund] where RefundResult = 1 union SELECT 'register' as datatype, COUNT(*) AS DebitNum, 0 AS DebitAmount FROM[dbo].[BAR_Account] order by datatype
	</select>
	
	<select id="GetRecentlyWeekStatistics" resultType="com.slzr.system.domain.StatisticsDO">
		SELECT 'debit' as datatype , CONVERT(varchar(10), TxnDateTime, 121)  AS TxnDateTime, SUM(DebitNum) AS DebitNum, SUM(DebitAmount) AS DebitAmount FROM[dbo].[BAR_TxnReportByDay]  WHERE(DATEDIFF(d, TxnDateTime, GETDATE()) &lt; 7) GROUP BY CONVERT(varchar(10), TxnDateTime, 121) union SELECT 'debit' as datatype, CONVERT(varchar(10), TxnDateTime, 121)  AS TxnDateTime, COUNT(*) AS DebitNum, SUM(TxnAmount) AS DebitAmount FROM[dbo].[BAR_DebitTransaction] WHERE(DATEDIFF(d, TxnDateTime, GETDATE()) = 0) GROUP BY CONVERT(varchar(10), TxnDateTime, 121) union SELECT 'topup' as datatype, CONVERT(varchar(10), TxnDateTime, 121)  AS TxnDateTime, SUM(TopupNum) AS DebitNum, SUM(TopupAmount) AS DebitAmount FROM[dbo].[BAR_TopupReportByDay] WHERE(DATEDIFF(d, TxnDateTime, GETDATE()) &lt; 7) GROUP BY CONVERT(varchar(10), TxnDateTime, 121) union SELECT 'topup' as datatype, CONVERT(varchar(10), TxnDateTime, 121)  AS TxnDateTime, COUNT(*) AS DebitNum, SUM(TxnAmount) AS DebitAmount FROM[dbo].[BAR_TopupTransaction] WHERE(DATEDIFF(d, TxnDateTime, GETDATE()) = 0) and payresult = 1 GROUP BY CONVERT(varchar(10), TxnDateTime, 121) union SELECT 'register' as datatype, CONVERT(varchar(10), [CreatedDate], 121)  AS TxnDateTime, COUNT(*) AS DebitNum, 0 AS DebitAmount FROM[dbo].[BAR_Account] WHERE(DATEDIFF(d, CreatedDate, GETDATE()) &lt; 7) GROUP BY CONVERT(varchar(10), [CreatedDate], 121) union SELECT 'refund' as datatype, CONVERT(varchar(10), RefundTime, 121)  AS TxnDateTime, SUM(RefundNum) AS DebitNum, SUM(RefundAmount) AS DebitAmount FROM[dbo].[BAR_WX_RefundReportByDay] WHERE(DATEDIFF(d, RefundTime, GETDATE()) &lt; 7) GROUP BY CONVERT(varchar(10), RefundTime, 121) union SELECT 'refund' as datatype, CONVERT(varchar(10), RefundTime, 121)  AS TxnDateTime, COUNT(*) AS DebitNum, SUM(RefundAmount) AS DebitAmount FROM[dbo].[BAR_WX_Refund] WHERE(DATEDIFF(d, RefundTime, GETDATE()) = 0) and RefundResult = 1 GROUP BY CONVERT(varchar(10), RefundTime, 121) order by datatype, TxnDateTime
	</select>
	
	<select id="GetTodayStatistics" resultType="com.slzr.system.domain.StatisticsDO">
		SELECT 'debit' as datatype, CONVERT(varchar(10), TxnDateTime, 121)  AS TxnDateTime, COUNT(*) AS DebitNum, SUM(TxnAmount) AS DebitAmount FROM[dbo].[BAR_DebitTransaction] WHERE(DATEDIFF(d, TxnDateTime, GETDATE()) = 0) GROUP BY CONVERT(varchar(10), TxnDateTime, 121) union SELECT 'topup' as datatype, CONVERT(varchar(10), TxnDateTime, 121)  AS TxnDateTime, COUNT(*) AS DebitNum, SUM(TxnAmount) AS DebitAmount FROM[dbo].[BAR_TopupTransaction] WHERE(DATEDIFF(d, TxnDateTime, GETDATE()) = 0) and payresult = 1 GROUP BY CONVERT(varchar(10), TxnDateTime, 121)union SELECT 'register' as datatype, CONVERT(varchar(10), [CreatedDate], 121)  AS TxnDateTime, COUNT(*) AS DebitNum, 0 AS DebitAmount FROM[dbo].[BAR_Account] WHERE(DATEDIFF(d, CreatedDate, GETDATE()) = 0) GROUP BY CONVERT(varchar(10), [CreatedDate], 121)union SELECT 'refund' as datatype, CONVERT(varchar(10), [RefundTime], 121)  AS TxnDateTime, COUNT(*) AS DebitNum, SUM(RefundAmount) AS DebitAmount FROM[dbo].[BAR_WX_Refund] WHERE(DATEDIFF(d, RefundTime, GETDATE()) = 0) and RefundResult = 1 GROUP BY CONVERT(varchar(10), RefundTime, 121)  order by datatype, TxnDateTime
	</select>
</mapper>