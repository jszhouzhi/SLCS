<!DOCTYPE html>
<html>
<meta charset="utf-8">
<head th:include="include :: header"></head>
<body class="gray-bg">
	<div class="wrapper wrapper-content ">
		<div class="row">
			<div class="col-sm-12">
				<div class="ibox float-e-margins">
					<div class="ibox-content">
						<form class="form-horizontal m-t" id="signupForm">
							
							<div class="form-group" th:if=" ${isAdmin} == y">
								<label class="col-sm-3 control-label">商户：</label>
								<div class="col-sm-8">
									<select class="form-control" lay-verify="required"
										name="merchantCode" id="merchantCode">
									<option value="">请选择</option>
									 <option th:each="merchant : ${merchantList}" th:value="${merchant.merchantCode}" th:text="${merchant.merchantName}"></option>
									</select>
								</div>
							</div>
							
							<div class="form-group">	
								<label class="col-sm-3 control-label">线路代码：</label>
								<div class="col-sm-8">
									<input id="branchCode" name="branchCode" class="form-control" type="text">
								</div>
							</div>
							<div class="form-group">	
								<label class="col-sm-3 control-label">线路名称：</label>
								<div class="col-sm-8">
									<input id="branchName" name="branchName" class="form-control" type="text">
								</div>
							</div>
							<div class="form-group">	
								<label class="col-sm-3 control-label">地址：</label>
								<div class="col-sm-8">
									<input id="address" name="address" class="form-control" type="text">
								</div>
							</div>
														<div class="form-group">	
								<label class="col-sm-3 control-label">经度：</label>
								<div class="col-sm-8">
									<input id="lat" name="lat" class="form-control" type="text">
								</div>
							</div>
														<div class="form-group">	
								<label class="col-sm-3 control-label">纬度：</label>
								<div class="col-sm-8">
									<input id="lng" name="lng" class="form-control" type="text">
								</div>
							</div>
														<div class="form-group">	
								<label class="col-sm-3 control-label">状态：</label>
								<div class="col-sm-8">
									<!-- <input id="state" name="state" class="form-control" type="text"> -->
									<select class="form-control" lay-verify="required" name="state" id="state">										
									<option value="">请选择</option>
									<option value="0">0</option>
									<option value="1">1</option>
									<option value="2">2</option>
									 
									</select>
								</div>
							</div>
														<div class="form-group">	
								<label class="col-sm-3 control-label">备注：</label>
								<div class="col-sm-8">
									<input id="remark" name="remark" class="form-control" type="text">
								</div>
							</div>



 
							<div class="form-group">
								<div class="col-sm-8 col-sm-offset-3">
									<button type="submit" class="btn btn-primary">提交</button>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
	</div>
	</div>
	<div th:include="include::footer"></div>
	<script type="application/javascript" th:src="@{/js/appjs/operation/optBranch/add.js}"></script>
	 
</body>
</html>
