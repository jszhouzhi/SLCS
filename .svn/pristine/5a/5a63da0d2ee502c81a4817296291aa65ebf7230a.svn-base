<!DOCTYPE html>
<html>
<meta charset="utf-8">
<head th:include="include :: header"></head>
<script th:inline="javascript">
var baseDO = [[${baseDO}]];
</script>
<body class="gray-bg">
	<div class="wrapper wrapper-content ">
		<div class="row">
			<div class="col-sm-12">
				<div class="ibox float-e-margins">
					<div class="ibox-content">
						<form class="form-horizontal m-t" id="signupForm">
							<input id="id" name="id" th:value="${account.id}"
								type="hidden">
							<div class="form-group">
								<label class="col-sm-3 control-label">用户账户：</label>
								<div class="col-sm-8">
									<input id="accountno" name="accountno" readonly="readonly"
										th:value="${account.accountno}" class="form-control"
										type="text">
								</div>
							</div>
  
							<div class="form-group">
								<label class="col-sm-3 control-label">账户余额：</label>
								<div class="col-sm-8">
									<input id="balance" name="balance" readonly="readonly"
										th:value="${account.balance}" class="form-control"
										type="text">
								</div>
							</div>
 
							<div class="form-group">
								<label class="col-sm-3 control-label">退款金额：</label>
								<div class="col-sm-8">
									<input id="refundBalance" name="refundBalance" 
										th:value="${account.balance}" class="form-control"
										type="text">
								</div>
							</div>


							<div class="form-group text-center">
								<button type="submit" class="btn btn-primary">提交</button>
								<button type="button" class="btn btn-warning"
									onclick="parent.layer.close(parent.layer.getFrameIndex(window.name))">关闭</button>
							</div>

						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div th:include="include::footer"></div>
	<script type="application/javascript" th:src="@{/js/appjs/account/account/refund.js}"></script>
	<script type="text/javascript">
	
 
	

 
	</script>

</body>
</html>
